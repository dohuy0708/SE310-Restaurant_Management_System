@using SE310_Restaurant_Management_System.ViewModels

@model List<MenuItemViewModel>

@foreach (var item in Model)
{
    <tr>
        <td style="width: 50%">@item.Name</td>
        <td style="width: 20%">@item.Price</td>
        <td style="width: 20%">
            <input type="number" class="quantity-input" min="1" value="1" />
        </td>
        <td style="width: 10%">
            <button type="button" class="btn-danger remove-item-btn" data-id="@item.MenuItemID">X</button>
        </td>
    </tr>
}