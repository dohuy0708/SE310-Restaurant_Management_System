@using X.PagedList.Mvc.Core
@using SE310_Restaurant_Management_System.ViewModels
@model X.PagedList.IPagedList<InventoryEntryViewModel>

@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2  >ĐƠN NHẬP KHO</h2>

<!-- Lọc theo ngày -->
<div class="d-flex justify-content-between mb-3">
    <!-- Filter by Date -->
    <!-- Filter by Date -->
    <form method="get" action="@Url.Action("Import")" class="d-flex align-items-center">
        <label for="selectedDate" class="me-2" style="width: 80px; font-weight:500">Ngày:</label>

        <!-- Input with custom height to match the button -->
        <input type="date" id="selectedDate" name="selectedDate"
               class="form-control me-2"
               value="@ViewBag.SelectedDate?.ToString("yyyy-MM-dd")"
               style="height: 34px;"> <!-- Adjust height as needed -->

        <button type="submit" class="btn btn-primary btn-sm">Lọc</button>
    </form>

    <button type="button" class="btn btn-primary btn-md" onclick="location.href='@Url.Action("CreateImport", "WareHouse")'">Nhập Kho</button>
</div>

<table class="table table-hover table-striped" style="position:relative">
    <thead>
        <tr>
            <th>Mã Đơn</th>
            <th>Ngày Nhập</th>
            <th>Mô tả</th>
            <th>Tổng Tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.EntryId</td>
                <td>@entry.EntryDate.ToShortDateString()</td>
                <td>@entry.Description</td>
                <td>@entry.TotalPrice</td>
                <td>
                    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#viewModal-@entry.EntryId">
                      Xem chi tiết
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var entry in Model)
{
    <div class="modal fade" id="viewModal-@entry.EntryId" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel-@entry.EntryId" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center w-100" id="viewModalLabel-@entry.EntryId">THÔNG TIN ĐƠN NHẬP KHO</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><strong>Mã Đơn:</strong> @entry.EntryId</p>
                    <p><strong>Ngày Nhập:</strong> @entry.EntryDate.ToShortDateString()</p>
                    <p><strong>Mô tả:</strong> @entry.Description</p>
                    <p><strong>Tổng Tiền:</strong> @entry.TotalPrice</p>

                    <h6>Chi Tiết Đơn Hàng:</h6>
                    <table class="table table-bordered" style="border: 1px solid silver;">
                        <thead style="border-bottom: 2px solid silver;">
                            <tr>

                                <th style="border: 1px solid silver;">Mã Nguyên Liệu</th>
                                <th style="border: 1px solid silver;"> Tên Nguyên Liệu</th> <!-- Added IngredientName column -->
                                <th style="border: 1px solid silver;">Đơn Vị</th>
                                <th style="border: 1px solid silver;">Số Lượng</th>
                                <th style="border: 1px solid silver;">Giá Nhập</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in entry.EntryDetails)
                            {
                                <tr>
                                     
                                    <td>@detail.IngredientId</td>
                                    <td>@detail.IngredientName</td> <!-- Display IngredientName here -->
                                    <td>@detail.Unit</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.ImportPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
}

<div style="position:fixed; top:650px">
    @Html.PagedListPager(Model, page => Url.Action("Import", new { page = page, selectedDate = ViewBag.SelectedDate }), new PagedListRenderOptions()
{
    LiElementClasses = new List<String> { "page-item" },
    PageClasses = new List<String> { "page-link" }
})
</div>
