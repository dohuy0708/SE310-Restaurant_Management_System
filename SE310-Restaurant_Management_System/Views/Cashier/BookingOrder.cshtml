@model IEnumerable<SE310_Restaurant_Management_System.Models.BookingOrder>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Đơn đặt bàn</h4>
        <a asp-action="Booking">Đặt bàn</a>
        <div class="table-responsive">
            <table class="table table-danger">
                <thead>
                    <tr>
                        <th>Khách hàng</th>
                        <th>SĐT</th>
                        <th>Thời gian</th>
                        <th>Số người</th>
                        <th>Tiền cọc</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-warning">
                            <td>@item.CustomerName</td>
                            <td>@item.CustomerPhone</td>
                            <td>@item.BookingTime</td>
                            <td>@item.NumberOfPeople</td>
                            <td>@item.DepositAmount đ</td>
                            <td>
                                <!-- Form hủy đặt bàn -->
                                <form asp-action="CancelBooking" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookingOrderId" value="@item.BookingOrderId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Hủy</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
