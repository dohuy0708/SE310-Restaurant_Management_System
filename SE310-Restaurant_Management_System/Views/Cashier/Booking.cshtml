@model SE310_Restaurant_Management_System.Models.BookingOrder

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Booking Form</h4>
        <form class="forms-sample" asp-action="Booking">
            <div class="form-group row">
                <label asp-for="CustomerName" class="col-sm-3 col-form-label">Customer Name</label>
                <div class="col-sm-9">
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CustomerPhone" class="col-sm-3 col-form-label">Customer Phone</label>
                <div class="col-sm-9">
                    <input asp-for="CustomerPhone" class="form-control" />
                    <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="BookingTime" class="col-sm-3 col-form-label">Booking Time</label>
                <div class="col-sm-9">
                    <input asp-for="BookingTime" class="form-control" />
                    <span asp-validation-for="BookingTime" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="NumberOfPeople" class="col-sm-3 col-form-label">Number of People</label>
                <div class="col-sm-9">
                    <input asp-for="NumberOfPeople" class="form-control" />
                    <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="DepositAmount" class="col-sm-3 col-form-label">Deposit Amount</label>
                <div class="col-sm-9">
                    <input asp-for="DepositAmount" class="form-control" />
                    <span asp-validation-for="DepositAmount" class="text-danger"></span>
                </div>
            </div>

            <!-- Dropdown List for Tables -->
            <div class="form-group row">
                <label asp-for="TableId" class="col-sm-3 col-form-label">Table</label>
                <div class="col-sm-9">
                    <select asp-for="TableId" class="form-control" style="color:black; font-size:medium">
                        <option value="">-- Select a Table --</option>
                        @foreach (var table in (ViewBag.Tables as List<RestaurantTable>))
                        {
                            if (table.TableId == ViewBag.SelectedTableId)
                            {
                                <option value="@table.TableId" selected>@table.TableId</option>
                            }
                            else
                            {
                                <option value="@table.TableId">@table.TableId</option>
                            }
                        }
                    </select>


                    <span asp-validation-for="TableId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
